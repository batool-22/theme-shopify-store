      html {
        font-size: 16px;
      }

      body {
        font-family: 'system-ui', 'Montserrat', 'Segoe UI', sans-serif;
      }

      html, body {
        height: 100%;
        min-height: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        font-family: 'system-ui';
        background: radial-gradient(circle at 0% 0%, #ffe0d2 20%, #f3f4f8 40%, #f3f4f8 60%, #ffb48a 100%);
        color: #e86d5a;
        font-style: normal;
      }
      body > *:not(.coming-soon-layout):not(.animated-bg) {
        display: none !important;
      }
      .animated-bg { display: none; }
      .logo-top {
        display: none;
      }
      .logo-pill-header {
        background: #5f3a31;
        border-radius: 999px;
        box-shadow: 0 4px 24px 0 rgba(0,0,0,0.08);
        padding: 0.25rem 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 70px;
        min-height: 40px;
        border: 1px solid #f0f0f0;
        margin: 3vh auto 2rem auto;
      }
      .logo-pill-header .logo-img {
       width: 142px;
        max-width: 100%;
        object-fit: contain;
      }
      .container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        padding: 0 8vw;
        box-sizing: border-box;
      }
      .center-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        max-width: 600px;
      }
      .logo-img {
        width: 400px;
        max-width: 40vw;
        object-fit: contain;
        margin-bottom: 0.3rem;
      }
      .coming-bold {
        font-weight: 700;
        font-size: clamp(2rem, 6vw, 3.6rem);
        margin-bottom: 1rem;
        text-align: center;
        line-height: 1.1;
      }
      .soon {
        font-weight: 600;
        font-size: clamp(1rem, 3vw, 1.3rem);
        color: #000;
        margin-bottom: 1rem;
        text-align: center;
      }
      .desc, .desc-gray {
        font-weight: 400;
        font-size: clamp(0.95rem, 2.5vw, 1.1rem);
        line-height: 1.6;
        text-align: center;
      }
      .logo-pill-header {
        position: absolute;
        top: 3vh;
       
        transform: translateX(-50%, 0);
        background: #5f3a31;
        border-radius: 999px;
        box-shadow: 0 4px 24px 0 rgba(0,0,0,0.08);
        padding: 0.5rem 3.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 70px;
        min-height: 40px;
        border: 1px solid #f0f0f0;
        z-index: 20;
      }
      .logo-pill-header .logo-img {
        width: 142px;
        max-width: 100%;
        object-fit: contain;
      }
      .coming-soon-bg {
        min-height: 100vh;
        width: 100vw;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        position: relative;
        background: transparent;
      }
      .main-content {
        background: #fff;
        border-radius: 32px;
        box-shadow: 0 4px 32px 0 rgba(0,0,0,0.08);
        margin-top: 60px;
        width: 90vw;
        max-width: 900px;
        min-height: 60vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 60px 24px 40px 24px;
        position: relative;
      }
      @media (max-width: 768px) {
        .logo-pill-header {
         
          min-width: 50px;
          min-height: 28px;
        }
        .logo-pill-header .logo-img {
         width: 180px;
        }
        .logo-top .logo-img {
          width: 120px;
          max-width: 30vw;
        }
        .container {
          padding: 0 2vw;
        }
        .center-content {
          max-width: 90vw;
        }
        .logo-img {
          max-width: 260px;
        }
        .main-content {
          border-radius: 18px;
          margin-top: 40px;
          padding: 40px 8px 24px 8px;
        }
        .logo-tab-header {
          min-width: 90px;
          min-height: 36px;
          padding: 6px 18px 10px 18px;
          border-radius: 0 0 28px 28px / 0 0 32px 32px;
          transform: translate(-50%, -40%);
        }
        .logo-tab-header .logo-img {
          width: 60px;
        }
      }
      .notify-btn-wrapper {
        display: flex;
        justify-content: center;
        margin: 2.5rem 0 1.5rem 0;
      }
      .notify-btn {
        display: flex;
        align-items: center;
        background: #181c32;
        color: #fff;
        border: none;
        border-radius: 999px;
       padding: 1.1rem 2.2rem;
        font-size: clamp(1rem, 2.5vw, 1.15rem);
        font-weight: 600;
        box-shadow: 0 8px 24px 0 rgba(24,28,50,0.18);
        cursor: pointer;
        transition: background 0.2s, box-shadow 0.2s;
        gap: 1.1rem;
      }
      .notify-btn:hover {
        background: #23284a;
        box-shadow: 0 12px 32px 0 rgba(24,28,50,0.22);
      }
      .notify-btn-icon {
        display: flex;
        align-items: center;
        margin-right: 0.5rem;
      }
      .notify-btn-arrow {
        display: flex;
        align-items: center;
        margin-left: 0.5rem;
      }
      .social-icons-footer {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin: 0;
        flex-shrink: 0;
        position: absolute;
        left: 0;
        right: 0;
        bottom: 2.5rem;
      }
      .footer-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
        border-radius: 50%;
        box-shadow: 0 2px 8px 0 rgba(24,28,50,0.10);
        width: 48px;
        height: 48px;
        transition: box-shadow 0.2s, background 0.2s;
        text-decoration: none;
      }
      .footer-icon:hover {
        box-shadow: 0 4px 16px 0 rgba(24,28,50,0.18);
        background: #f3f4f6;
      }
      .footer-icon svg {
        width: 28px;
        height: 28px;
        display: block;
      }
      .desc-gray {
        color: #696969;
      }
      .bg-gaming-icon {
        position: absolute;
        opacity: 1.22;
        z-index: 2;
        pointer-events: none;
        width: 80px;
        height: 80px;
      }

      .icon1 {
        left: 5vw;
        top: 12vh;
        width: 80px;
        height: 80px;
        animation: floatY 6s ease-in-out infinite;
      }

      .icon2 {
        right: 8vw;
        bottom: 10vh;
        width: 90px;
        height: 90px;
        animation: floatX 8s ease-in-out infinite;
      }
      .icon3 {
        left: 12vw;
        bottom: 8vh;
        width: 70px;
        height: 70px;
        animation: floatXY 7s ease-in-out infinite;
      }
      .icon4 {
        right: 12vw;
        top: 8vh;
        width: 65px;
        height: 65px;
        animation: floatY2 9s ease-in-out infinite;
      }
      .icon5 {
        left: 50vw;
        bottom: 16vh;
        width: 65px;
        height: 65px;
        animation: floatX2 10s ease-in-out infinite;
      }
      @keyframes floatY {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-30px); }
      }
      @keyframes floatX {
        0%, 100% { transform: translateX(0); }
        50% { transform: translateX(40px); }
      }
      @keyframes floatXY {
        0%, 100% { transform: translate(0,0); }
        50% { transform: translate(30px, -20px); }
      }
      @keyframes floatY2 {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(25px); }
      }
      @keyframes floatX2 {
        0%, 100% { transform: translateX(0); }
        50% { transform: translateX(-25px); }
      }
      .notify-form {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 1.2rem;
        width: 100%;
        justify-content: center;
      }
      .notify-input {
        padding: 0.7rem 1.2rem;
        border-radius: 999px;
        border: 1px solid #ddd;
        font-size: clamp(1rem, 2.5vw, 1.1rem);
        outline: none;
        width: 220px;
      }
      .notify-send-btn {
        padding: 0.7rem 1.5rem;
        border-radius: 999px;
        border: none;
        background: #181c32;
        color: #fff;
        font-weight: 600;
        font-size: clamp(1rem, 2.5vw, 1.15rem);
        cursor: pointer;
        transition: background 0.2s;
      }
      .notify-send-btn:hover {
        background: #23284a;
      }
      .notify-back-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f3f4f6;
        border: none;
        border-radius: 50%;
        width: 38px;
        height: 38px;
        margin-right: 0.5rem;
        cursor: pointer;
        transition: background 0.2s;
        font-size: 1.2rem;
        color: #23284a;
      }
      .notify-back-btn:hover {
        background: #e5e7eb;
      }
    </style>
  </head>
