    {{ content_for_header }}
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@1,800&display=swap" rel="stylesheet">
    <style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Montserrat', 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #f7c7a3, #e86d5a);
        color: #222;
      }
     body > *:not(.coming-soon-layout):not(.animated-bg) {
  display: none !important;
}
      .animated-bg { display: none; }
      
     
     .container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100vh;
        padding: 0 8vw;
        box-sizing: border-box;
      }

      .left-content {
        max-width: 600px;
      }

      .headline {
        font-weight: 800;
        font-style: italic;
        font-size: 3rem;
        color: #922d1d;
        margin-bottom: 1rem;
      }

      .coming-bold {
        font-weight: 700;
        font-size: 1.6rem;
        margin-bottom: 1rem;
      }

      .soon {
        font-weight: 600;
        font-size: 1.1rem;
        color: #000;
        margin-bottom: 1rem;
      }

      .desc {
        font-weight: 400;
        font-size: 1rem;
        color: #f4f4f4;
        line-height: 1.6;
      }

      .logo-img {
        width: 400px;
        max-width: 40vw;
        object-fit: contain;
      }

      @media (max-width: 768px) {
        .container {
          flex-direction: column;
          justify-content: center;
          text-align: center;
          gap: 2rem;
        }

        .left-content {
          max-width: 90vw;
        }

        .headline {
          font-size: 2rem;
        }

        .logo-img {
          width: 160px;
        }
      }
    </style>
  </head>
  <body>
  <div class="coming-soon-layout">
    <div class="container">
      <div class="left-content">
        <div class="headline">ModsVault</div>
        <div class="coming-bold">Coming Soon</div>
        <div class="soon">Your premium destination for next-level game modding.</div>
        <div class="desc">
          Curated mods, exclusive save files, and pro tools for PlayStation & PC.<br>
          Stay tuned for launch.
        </div>
      </div>
      <img src="https://i.postimg.cc/fTbjswKy/logo-1.png" alt="ModsVault Logo" class="logo-img" loading="eager" />
    </div>
  </div>

  {{ content_for_layout }}
