  <script>
document.addEventListener('DOMContentLoaded', function() {
  var notifyBtn = document.getElementById('notifyMeBtn');
  var notifyForm = document.getElementById('notifyForm');
  if (notifyBtn && notifyForm) {
    notifyBtn.addEventListener('click', function() {
      notifyBtn.style.display = 'none';
      notifyForm.style.display = 'flex';
    });
  }
  var notifyBackBtn = document.getElementById('notifyBackBtn');
  if (notifyBackBtn && notifyBtn && notifyForm) {
    notifyBackBtn.addEventListener('click', function() {
      notifyForm.style.display = 'none';
      notifyBtn.style.display = '';
    });
  }
});
</script>
